  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">News</a>
    </div>

    <div class="form-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th scope="col">Ative</th>
          </tr>
        </thead>
        <tbody>
          <% listUsers.forEach(function(user) { %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.city %></td>
            <td style="display: flex; align-items: center">
              <button type="button" class="btn btn-primary">
                <a style="color: aliceblue" href="/update-user/<%= user.id %>">
                  Edit</a
                >
              </button>

              <form method="post" action="/delete-user/<%= user.id %>">
                <button class="btn btn-dark" style="margin-left: 10px">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

